<LinearLayout android:id="@+id/ranking_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    android:orientation="vertical"
    android:background="#ffffff"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginTop="35dp"
            android:layout_width="61dp"
            android:layout_height="match_parent"
            android:src="@drawable/coin" />

        <TextView
            android:fontFamily="@font/pointfont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:text="My Point : "
            android:textColor="#000000"
            android:textSize="30dp" />

        <TextView
            android:textStyle="bold"
            android:fontFamily="@font/pointfont"
            android:id="@+id/point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="#FF1E90FF"
            android:textSize="30dp"
            android:text="100 p" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15dp">

        <Button
            android:textStyle="bold"
            android:fontFamily="@font/pointfont"
            android:id="@+id/rank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:background="#ffffff"
            android:textColor="#000000"
            android:textSize="30dp"
            android:drawableLeft="@drawable/trophya"
            android:text="   -ranking-"/>

        <Button
            android:fontFamily="@font/pointfont"
            android:id="@+id/Total_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:gravity="fill_vertical"
            android:textSize="15dp"
            android:textColor="#808080"
            android:visibility="invisible"
            android:text="             ●   overall ranking"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:fontFamily="@font/pointfont"
            android:id="@+id/Kind_of_ranking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OVERALL RANKING"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:textColor="#000000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:id="@+id/Scroll1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:fillViewport="true"
                android:visibility="visible">

                <ListView
                    android:id="@+id/Total_rank_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </ListView>

            </ScrollView>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>